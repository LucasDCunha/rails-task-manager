<div style="margin-bottom: 16px">
  <%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :Title %>
    <%= f.text_field :title, class: "form-control", value: @task.title %>
  </div>
  <div class="form-group">
    <%= f.label :Details %>
    <%= f.text_field :details, class: "form-control", value: @task.details  %>
  </div>
  <div class="form-group form-check">
    <%= f.check_box :completed, class: "form-check-input", value: @task.completed  %>
    <%= f.label :Completed, class: "form-check-label" %>
  </div>
    <%= f.submit class: "btn btn-success" %>
  <% end %>
</div>
